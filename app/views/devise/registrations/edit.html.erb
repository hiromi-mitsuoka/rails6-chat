<div class="display-box">
<div class="text-center">
<h2><%= t('.title', resource: resource.model_name.human) %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  
  <div class="field">
    <!--<%#= f.label :username, "名前" %><br />-->
    <%= f.text_field :username, placeholder: "名前", class: "circle-form", autofocus: true, autocomplete: "username" %>
  </div>

  <div class="field">
    <!--<%#= f.label :email %><br />-->
    <%= f.email_field :email, placeholder: "メールアドレス", class: "circle-form", autofocus: true, autocomplete: "email" %>
  </div>
  
  <div class="field">
    <!--<#%= f.label :avatar, "プロフィール画像"  %><br />-->
    <label class="avatar-file-width avatar-image-label text-center circle-form">
    <i class="fas fa-images"></i>
      <%= f.file_field :avatar, placeholder: "プロフィール画像", class: "circle-form avatar-images-file", autofocus: true, autocomplete: "avatar" %>
    </label>
  </div>
  
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div><%= t('.currently_waiting_confirmation_for_email', email: resource.unconfirmed_email) %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>(<%= t('.leave_blank_if_you_don_t_want_to_change_it') %>)</i><br />
    <!--<%#= f.label :password %>-->
    <%= f.password_field :password, placeholder: "パスワード", class: "circle-form", autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
    <% end %>
  </div>

  <div class="field">
    <!--<%#= f.label :password_confirmation %><br />-->
    <%= f.password_field :password_confirmation, placeholder: "もう一度新しいパスワードを確認", class: "circle-form", autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(<%= t('.we_need_your_current_password_to_confirm_your_changes') %>)</i><br />
    <%= f.password_field :current_password, placeholder: "現在のパスワード", class: "circle-form", autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit t('.update'), class: "btn" %>
  </div>
<% end %>

<!--<h3 class="m-top"><%#= t('.cancel_my_account') %></h3>-->

<%= button_to t('.cancel_my_account'), registration_path(resource_name), data: { confirm: t('.are_you_sure') }, method: :delete, class: "btn btn-delete" %>

<%= link_to t('devise.shared.links.back'), :back %>
</div>
</div>