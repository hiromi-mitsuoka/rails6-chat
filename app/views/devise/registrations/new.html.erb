<div class="display-box">
<div class="text-center">
<h2 class="m-top m-bottom"><%= t('.sign_up') %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  
  <div class="field">
    <!--<%#= f.label :username, "名前" %><br />-->
    <%= f.text_field :username, placeholder: "名前", class: "circle-form", autofocus: true, autocomplete: "username" %>
  </div>

  <div class="field">
    <!--<%#= f.label :email %><br />-->
    <%= f.email_field :email, placeholder: "メールアドレス", class: "circle-form", autofocus: true, autocomplete: "email" %>
  </div>
  
  <div class="field">
    <!--<#%= f.label :avatar, "プロフィール画像"  %><br />-->
    <label class="avatar-file-width avatar-image-label text-center circle-form change-color">
    <i class="fas fa-images"></i>
      <%= f.file_field :avatar, placeholder: "プロフィール画像", class: "circle-form avatar-images-file  images-on", autofocus: true, autocomplete: "avatar" %>
    </label>
  </div>

  <div class="field">
    <!--<%#= f.label :password %>-->
    <%= f.password_field :password, placeholder: "パスワード", class: "circle-form", autocomplete: "new-password" %>
    <% if @minimum_password_length %><br />
    <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
    <% end %>
  </div>

  <div class="field">
    <!--<%#= f.label :password_confirmation %><br />-->
    <%= f.password_field :password_confirmation, placeholder: "もう一度パスワード確認", class: "circle-form", autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit t('.sign_up'), class: "btn" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>

<!--画像がセットされたらpink-->
<%= javascript_pack_tag 'custom/image_file' %>
