<div class="display-box">
<div class="text-center">
<h2 class="m-bottom"><%= t('.sign_in') %></h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="field">
    <!--<%#= f.label :username, "名前" %><br />-->
    <%= f.text_field :username, placeholder: "名前", class: "circle-form", autofocus: true, autocomplete: "username" %>
  </div>

  <!--<div class="field">-->
    <%#= f.label :email %><br />
    <%#= f.email_field :email, autofocus: true, autocomplete: "email" %>
  <!--</div>-->

  <div class="field">
    <!--<%#= f.label :password %><br />-->
    <%= f.password_field :password, placeholder: "パスワード", class: "circle-form", autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit t('.sign_in'), class: "btn" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>
</div>