<sidebar class="sidebar">
  
  <% if user_signed_in? %>
    <ul>
      <%#= image_tag "icon.png", class: "icon" %>
      <li>
        <% if current_user.avatar? %>
          <%= image_tag current_user.avatar.url, class: "avatar" %>
        <% else %>
          <%= image_tag "avatar.png", class: "avatar" %>
        <% end %>
        <strong><%= link_to current_user.username , user_path(current_user.id) %></strong></li>
      <li><%= link_to "プロフィール編集", edit_user_registration_path %></li>
      <li><%= link_to "ログアウト", destroy_user_session_path, 
              method: :delete, 
              data: { confirm: "ログアウトしますか？" } %></li>
      <li><%= link_to "トップへ戻る", root_path %></li>
      </ul>
  <% else %>
    <div class="not_signed_in_sidebar">
      <%= image_tag "icon.png", class: "icon" %>
    </div>
  <% end %>
  
</sidebar>