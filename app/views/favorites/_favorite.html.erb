<% if user_signed_in? %>
  <% if message.favorited_by?(current_user) %>
    <p><span>お気に入り解除:</span><%= link_to message.favorites.count, message_favorites_path(message.id), method: :delete, remote: true %></p>
  <% else %>
    <p><span>お気に入り登録:</span><%= link_to message.favorites.count, message_favorites_path(message.id), method: :post, remote: true %></p>
  <% end %>
<% else %>
  <p><span>お気に入り数</span><%= message.favorites.count %></p>
<% end %>

