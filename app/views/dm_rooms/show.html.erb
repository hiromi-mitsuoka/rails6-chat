<div id="dm_room-container">
  <% @dm_entries.each do |e| %>
    <h3 class="text-center">
      <strong>
        <% if e.user.id != current_user.id %>
          <% if e.user.avatar? %>
              <%= image_tag e.user.avatar.url, class: "avatar" %>
            <% else %>
              <%= image_tag "avatar.png", class: "avatar" %>
            <% end %>
          <%= link_to e.user.username + "とトーク", user_path(e.user_id) %>
        <% end %>
      </strong>
    </h3>
  <% end %>
  
  <hr>
  
    <%# if @dm_messages.present? %>
      <div id="dm_message-container">
          <!--<div id="dm_messages" data-room_id="<%#= @dm_room.id %>">-->
        <%= render @dm_messages %>
      </div>
    <%# else %>
      <!--<div id="no_message_but_move_js">-->
      <!--  <h3 class="text-center">メッセージはまだありません</h3>-->
      <!--</div>-->
    <%# end %>
  <!--</div>-->
  
  <input value="<%= current_user.id %>" id="dm_current_user_num" type="hidden">
  <div class="fixed">
    <%= render "dm_footer" %>
  </div>
</div>