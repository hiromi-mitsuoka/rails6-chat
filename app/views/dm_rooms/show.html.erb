<% @dm_entries.each do |e| %>
  <h3 class="text-center">
    <strong>
      <% if e.user.id != current_user.id %>
        <%= link_to e.user.username + "とトーク", user_path(e.user_id) %>
      <% end %>
    </strong>
  </h3>
<% end %>

<hr>

<div id="dm_message-container">
  <% if @dm_messages.present? %>
    <%= render @dm_messages %>
  <% else %>
    <h3 class="text-center">メッセージはまだありません</h3>
  <% end %>
</div>



<%= render "dm_footer" %>